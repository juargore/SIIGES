<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabs.Tab_Inspeccion_I">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListaInspeccion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layObservaciones"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/layObservaciones"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:background="#fff">


        <EditText
            android:id="@+id/etObservacionesI"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/fondo_observaciones_blanco"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Observaciones del apartado"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColorHint="#999999"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgGuardarComentarioI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:background="@drawable/background_redondo"
                android:padding="7dp"
                android:src="@drawable/ic_save_black_24dp" />

            <ImageView
                android:id="@+id/imgEliminarComentarioI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/background_redondo"
                android:padding="4dp"
                android:src="@drawable/ic_borrar" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>