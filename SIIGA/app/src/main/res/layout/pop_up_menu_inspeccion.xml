<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPopUpMenu"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginBottom="15dp"
    android:background="#fff"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="6dp">

    <LinearLayout
        android:id="@+id/layPopUpMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rojoDebil"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txtTituloPopUpGral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MenÃº de Opciones"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMenuVer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_ver_editar"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="Ver / Editar"
                android:textSize="18sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:layout_marginTop="5dp"
                android:background="#9CA3AA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMenuSincronizar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_sync_black"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="Sincronizar"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>