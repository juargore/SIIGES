<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPopUpCuestionario"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginBottom="15dp"
    android:background="#fff"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="6dp">

    <LinearLayout
        android:id="@+id/layPopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rojoDebil"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txtTituloPopUpGral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_assignment"
                android:drawablePadding="10dp"
                android:text="DGESIyP Inspecciones"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFCuestionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Folio"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtFolioCuestionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3489865"
                android:textColor="#A4A4A4" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:layout_marginTop="5dp"
                android:background="#9CA3AA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFeCuestionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtFechaCuestionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22 / JUN / 2018"
                android:textColor="#A4A4A4" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:layout_marginTop="5dp"
                android:background="#9CA3AA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtICuestionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="InstituciÃ³n"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtInstitucionCuestionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Universidad LAMAR"
                android:textColor="#A4A4A4" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:layout_marginTop="5dp"
                android:background="#9CA3AA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPrCuestionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programa Educativo"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtProgramaCuestionario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciencias Sociales II"
                android:textColor="#A4A4A4" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:layout_marginTop="5dp"
                android:background="#9CA3AA" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>