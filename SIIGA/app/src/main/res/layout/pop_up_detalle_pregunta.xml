<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPopUpPregunta"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginBottom="15dp"
    android:background="#fff"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="6dp">

    <LinearLayout
        android:id="@+id/layPopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rojoDebil"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txtTituloPopUpGral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información "
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtApPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apartado"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtApartadoPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AULAS INDICADORES"
                android:textColor="#A4A4A4" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:layout_marginTop="5dp"
                android:background="#9CA3AA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCaPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtCategoriaPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AULAS"
                android:textColor="#A4A4A4" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:layout_marginTop="5dp"
                android:background="#9CA3AA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtInPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instrucción"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtInstruccionPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción de la Instrucción"
                android:textColor="#A4A4A4" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:layout_marginTop="5dp"
                android:background="#9CA3AA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTiPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de pregunta"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtTipoPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de pregunta que recibe una cadena"
                android:textColor="#A4A4A4" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>